{
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}