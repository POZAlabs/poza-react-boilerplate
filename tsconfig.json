{
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2017", "es2019", "dom"],
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "src/types/packages"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
